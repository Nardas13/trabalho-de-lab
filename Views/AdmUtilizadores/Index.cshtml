@model IEnumerable<AutoHubProjeto.Models.Utilizador>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Utilizadores";
}

<h1>Gestão de Utilizadores</h1>

<table class="admin-table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Tipo</th>
            <th>Estado</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Nome</td>
                <td>@u.Email</td>
                <td>
                    @if (u.Administrador != null)
                    {
                        <span class="badge admin">Admin</span>
                    }
                    else if (u.Vendedor != null)
                    {
                        <span class="badge vendedor">Vendedor</span>
                    }
                    else
                    {
                        <span class="badge comprador">Comprador</span>
                    }
                </td>
                <td>@u.EstadoConta</td>
                <td>
                    <a href="/AdminUtilizadores/Detalhes/@u.Id" class="link-view">
                        Ver
                    </a>
                    @if (u.Email == "autohubadm1@gmail.com")
                    {
                        <span class="badge admin">Admin Supremo</span>
                    }
                    else
                    {
                        @if (u.EstadoConta == "ativo")
                        {
                            <button type="button"
                                    class="btn-outline-danger"
                                    onclick="openBlockModal(@u.Id, '@u.Nome')">
                                Bloquear
                            </button>

                        }
                        else
                        {
                            <form method="post" action="/AdminUtilizadores/Desbloquear" class="inline-form">
                                <input type="hidden" name="id" value="@u.Id" />
                                <button type="submit" class="btn-success">
                                    Ativar
                                </button>
                            </form>
                        }
                    }

                </td>
            </tr>
        }
    </tbody>
</table>

<!-- MODAL BLOQUEIO UTILIZADOR -->
<div id="blockModal" class="modal">
    <div class="modal-content cancel-box">

        <h2>Bloquear Utilizador</h2>

        <p class="cancel-text">
            Indica o motivo do bloqueio.
        </p>

        <form method="post" action="/AdmUtilizadores/Bloquear">
            <input type="hidden" name="id" id="blockUserId" />

            <input type="text"
                   name="motivo"
                   class="admin-input"
                   placeholder="Motivo do bloqueio"
                   required />

            <div class="modal-buttons">
                <button type="button" class="btn-outline" onclick="closeBlockModal()">
                    Cancelar
               
                </button>

                <button type="submit" class="btn-danger">
                    Confirmar
                </button>
            </div>
        </form>

    </div>
</div>

<script src="/js/admin.js"></script>
