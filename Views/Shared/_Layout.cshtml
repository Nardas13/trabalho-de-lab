<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - AutoHub de Veículos Usados</title>

    <!-- Fonte -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet" />

    <!-- CSS global -->
    <link rel="stylesheet" href="~/css/variables.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    @RenderSection("Styles", required: false)

    <!-- CSS específico da página -->
</head>
<body class="@(ViewBag.AuthPage == true ? "auth-layout" : "")">
    <!-- HEADER -->
    <header class="nav">
        <div class="nav-inner">

            <!-- LOGO + NOME -->
            <div class="brand">
                <img src="~/imgs/logotipodourado.jpg" class="logo-dourado" />
                <span class="brand-name">AUTOHUB</span>
            </div>

            <!-- MENU CENTRAL -->
            <nav class="menu-center">
                <a href="/Home/Index">Início</a>
                <a href="/Anuncios/Index">Anúncios</a>
            </nav>

            <!-- ICONES À DIREITA -->
            <div class="menu-right">

                <!-- Help -->
                <a href="/Suporte/Index" class="icon">
                    <svg width="20" height="20" stroke="#1a1a1a" fill="none" stroke-width="2" viewBox="0 0 24 24">
                        <circle cx="12" cy="12" r="9"></circle>
                        <path d="M9.5 9.2a3 3 0 1 1 4.3 2.6c-.8.4-1.3 1.2-1.3 2v1"></path>
                        <circle cx="12" cy="17" r="1.2" fill="#1a1a1a"></circle>
                    </svg>
                </a>



                <!-- Globe -->
                <a href="/Home/Index" class="icon">
                    <svg width="20" height="20" stroke="#1a1a1a" fill="none" stroke-width="2.2" viewBox="0 0 24 24">
                        <circle cx="12" cy="12" r="9"></circle>
                        <path d="M3.6 9h16.8"></path>
                        <path d="M3.6 15h16.8"></path>
                        <path d="M12 3a15 15 0 0 1 0 18"></path>
                        <path d="M12 3a15 15 0 0 0 0 18"></path>
                    </svg>
                </a>


                <!-- User -->
                <a href="/Auth/Index" class="icon">
                    <svg width="20" height="20" stroke="#1a1a1a" fill="none" stroke-width="2.2" viewBox="0 0 24 24">
                        <circle cx="12" cy="7" r="4"></circle>
                        <path d="M4 21c1-4 4-7 8-7s7 3 8 7"></path>
                    </svg>
                </a>


            </div>

        </div>
    </header>

    <!-- CONTEÚDO DAS PÁGINAS -->
    <main>
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer>
        <div class="container footer-sections">

            <!-- COLUNA 1 — CONTACTOS -->
            <div class="footer-section">
                <h4>Contacte-nos</h4>
                <p>📞 +351 123 456 789</p>
                <p>Serviço de Apoio ao Cliente:</p>
                <p><strong>apoio@autohub.pt</strong></p>
            </div>

            <!-- COLUNA 2 — HORÁRIO -->
            <div class="footer-section">
                <h4>Horário de Suporte</h4>
                <p>Seg–Sex: 9h – 18h</p>
                <p>Sáb: 10h – 14h</p>
                <p>Dom: Fechado</p>
            </div>

            <!-- COLUNA 3 — SOBRE NÓS -->
            <div class="footer-section">
                <h4>Sobre Nós</h4>
                <p class="about-text">
                    Na AutoHub conectamos compradores e vendedores<br>
                    de carros usados com segurança e confiança.
                </p>

                <div class="socials">
                    <a href="/Home/Index"><img src="~/imgs/icons/icon-web.png" alt="Website" /></a>
                    <a href="https://www.facebook.com/Cristiano?locale=pt_PT"><img src="~/imgs/icons/icon-facebook.png" alt="Facebook" /></a>
                    <a href="https://www.instagram.com/x_clara_pimentel_x"><img src="~/imgs/icons/icon-instagram.png" alt="Instagram" /></a>
                    <a href="https://www.linkedin.com/in/salomé-batista-49bb04323"><img src="~/imgs/icons/icon-twitter.png" alt="LinkedIn" /></a>
                </div>
            </div>

            <!-- COLUNA 4 — TERMOS -->
            <div class="footer-section">
                <h4>Termos & Políticas</h4>
                <a href="/Termos/Index#termos">Termos de Utilização</a><br>
                <a href="/Termos/Index#privacidade">Política de Privacidade</a><br>
                <a href="/Termos/Index#cookies">Política de Cookies</a>
            </div>

        </div>

        <div class="footer-bottom">© 2025 AutoHub. Todos os direitos reservados.</div>
    </footer>

    <!-- JS global -->
    <script src="~/js/site.js"></script>

    <!-- JS específico da página -->
    @RenderSection("Scripts", required: false)
</body>
</html>

